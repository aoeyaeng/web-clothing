<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Aoeyaeng Clothing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Kanit:wght@300;400;500;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Kanit', sans-serif;
            font-weight: 300;
            color: #333;
        }

        .navbar-custom {
            background: linear-gradient(135deg, #fbc2eb, #a6c1ee);
            padding: 15px 0;
        }

        .navbar-custom .navbar-brand {
            color: #fff;
            font-family: 'Marcellus', serif;
            font-weight: bold;
            font-size: 26px;
        }

        .navbar-custom .nav-link {
            color: #fff !important;
            margin: 0 10px;
            font-weight: 500;
            font-size: 20px;
        }

        .section-title {
            color: #ff8fab;
            font-family: 'Marcellus', serif;
            font-weight: 400;
            font-size: 2.3rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .product-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.5s ease, box-shadow 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            min-height: 250px;
            max-height: 350px;
            width: 100%;
            object-fit: contain;
            background-color: #fff;
            padding: 10px;
            transition: transform 0.4s ease;
        }

        .product-card:hover img {
            transform: scale(1.05);
        }

        .btn-custom {
            background: linear-gradient(45deg, #fbc2eb, #a6c1ee);
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 25px;
            padding: 8px 20px;
        }

        .btn-custom:hover {
            background: linear-gradient(45deg, #ff9a9e, #fad0c4);
        }

        .btn-outline-secondary {
            color: #ff8fab;
            border-color: #ff8fab;
        }

        .btn-outline-secondary:hover {
            color: white;
            background-color: #ff8fab;
        }
    </style>
</head>

<body>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0" role="alert"
            aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toast-message">
                    Item added to cart!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-tshirt me-2" style="font-size: 1.5rem; color: #fff;"></i>
                Aoeyaeng Clothing
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/products">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>

                    <li class="nav-item"><a class="nav-link" href="/dashboard">Account</a></li>
                    <% if (isLoggedIn) { %>
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>

                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <h2 class="section-title">All Products</h2>

        <div class="d-flex justify-content-center flex-wrap mb-4">
            <a href="/products?category=all" class="btn <%= selectedCategory === 'all' ?
        'btn-custom' : 'btn-outline-secondary' %> mx-2 my-1">All</a>
            <% categories.forEach(category=> { %>
                <a href="/products?category=<%= category %>"
                    class="btn <%= selectedCategory === category ? 'btn-custom' : 'btn-outline-secondary' %> mx-2 my-1">
                    <%= category %>
                </a>
                <% }); %>
        </div>

        <div class="row g-4">

            <% products.forEach(product=> { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card product-card h-100">
                        <img src="<%= product.image_url || 'images/default.jpg' %>" class="card-img-top"
                            alt="<%= product.name %>">
                        <div class="card-body text-center d-flex flex-column">

                            <h5 class="card-title">
                                <%= product.name %>
                            </h5>
                            <p class="card-text text-muted">
                                <%= product.description %>
                            </p>


                            <h6 class="text-danger mb-3">à¸¿<%= parseFloat(product.price).toFixed(2) %>
                            </h6>

                            <button class="btn btn-custom mt-auto btn-add-to-cart"
                                data-product-id="<%= product.product_id %>">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart

                            </button>
                        </div>
                    </div>
                </div>
                <% }); %>

                    <% if (products.length===0) { %>
                        <div class="col-12 text-center">
                            <p class="text-muted">No products found in this category.</p>
                        </div>
                        <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.btn-add-to-cart').forEach(button => {
            button.addEventListener('click', function () {
                const productId = this.getAttribute('data-product-id');


                fetch('/add-to-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ product_id: productId })
                })

                    .then(response => response.json())
                    .then(data => {

                        if (!data.success) {
                            alert(data.message);
                            window.location.href = '/login';
                        } else {
                            const toastEl = document.getElementById('liveToast');
                            const toastMsg = document.getElementById('toast-message');
                            const toast = new bootstrap.Toast(toastEl);

                            toastMsg.textContent = data.message;

                            toastEl.classList.remove('bg-danger');
                            toastEl.classList.add('bg-success');

                            toast.show();
                        }
                    })
                    .catch(error => {
                        console.error('Error:',
                            error);
                        alert('Connection Error');
                    });
            });
        });
    </script>
</body>

</html>