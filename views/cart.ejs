<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart - Aoeyaeng Clothing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Kanit:wght@300;400;500;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Kanit', sans-serif;
            font-weight: 300;
            color: #333;
        }

        .navbar-custom {
            background: linear-gradient(135deg, #fbc2eb, #a6c1ee);
            padding: 15px 0;
        }

        .navbar-custom .navbar-brand {
            color: #fff;
            font-family: 'Marcellus', serif;
            font-weight: bold;
            font-size: 26px;
        }

        .navbar-custom .nav-link {
            color: #fff !important;
            margin: 0 10px;
            font-weight: 500;
            font-size: 20px;
        }

        .section-title {
            color: #ff8fab;
            font-family: 'Marcellus', serif;
            font-weight: 400;
            font-size: 2.3rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .btn-custom-checkout {
            background: linear-gradient(45deg, #a6c1ee, #c2e9fb);
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 25px;
            padding: 10px 30px;
        }

        .btn-custom-checkout:hover {
            background: linear-gradient(45deg, #87a7d6, #a1c4fd);
            color: white;
        }

        .cart-item-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-tshirt me-2" style="font-size: 1.5rem; color: #fff;"></i>
                Aoeyaeng Clothing
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/cart">Cart</a></li>

                    <li class="nav-item"><a class="nav-link" href="/dashboard">Account</a></li>
                    <% if (isLoggedIn) { %>
                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>

                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <h2 class="section-title"><i class="fas fa-shopping-cart me-2"></i>Your Shopping Cart</h2>

        <% if (cartItems.length===0) { %>
            <div class="alert alert-info text-center" role="alert">
                Your cart is empty.
                <a href="/products" class="alert-link">Shop now</a>
            </div>
            <% } else { %>
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <% cartItems.forEach(item=> { %>

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="<%= item.image_url || 'images/default.jpg' %>" alt="<%= item.name %>"
                                            class="cart-item-img me-3">

                                        <div>
                                            <h6 class="mb-1">
                                                <%= item.name %>
                                            </h6>


                                            <small class="text-muted">฿<%= parseFloat(item.price).toFixed(2) %> x <%=
                                                        item.quantity %></small>


                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <h6 class="text-danger me-3 mb-0">฿<%=
                                                parseFloat(item.total_price_item).toFixed(2) %>
                                        </h6>

                                        <button class="btn btn-sm btn-outline-danger btn-remove-item"
                                            data-cart-id="<%= item.cart_id %>">
                                            <i class="fas fa-trash"></i> Remove

                                        </button>
                                    </div>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body text-end">
                        <h4>Cart Total: <span class="text-success">฿<%= cartTotal %></span></h4>
                        <button id="btn-checkout" class="btn 
                btn-custom-checkout mt-3">
                            <i class="fas fa-check-circle me-2"></i>Confirm Order
                        </button>
                    </div>
                </div>
                <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.btn-remove-item').forEach(button => {
            button.addEventListener('click', function () {
                const cartId = this.getAttribute('data-cart-id');

                if (confirm('Confirm removal of this item from cart?')) {
                    fetch('/remove-from-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'

                        },
                        body: JSON.stringify({ cart_id: cartId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            alert(data.message);
                            if (data.success) {
                                window.location.reload();
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Connection Error');
                        });
                }
            });
        });

        document.getElementById('btn-checkout').addEventListener('click', function () {
            if (confirm('Confirm purchase order?')) {
                fetch('/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })

                    .then(response => response.json())
                    .then(data => {
                        alert(data.message);
                        if (data.success) {
                            window.location.reload();
                        }
                    })
                    .catch(error => {

                        console.error('Error:', error);
                        alert('Connection Error');
                    });
            }
        });
    </script>
</body>

</html>